{% if data.products is defined %}
<p>Manage all of the default and customized product information on your Shopify website.</p>
<table class="table">
  <theader>
    <tr>
      <th>Image</th>
      <th style="width: 50%">Name</th>
      <th style="width: 10%">Administration</th>
      <th style="width: 5%"></th>

    </tr>
  </theader>
  <tbody>
    
  {% for product in data.products %}    
  <tr>
    <td><img style="max-width: 100px;" src="{% for image in product.images | slice(0,1) %}{{image.src}}{% endfor %}" /></td>
    <td>{{product.title}}</td>
    <td><a href="javascript:void(0);" onclick="ShopifyApp.redirect('/admin/products/{{product.id}}')" class="btn btn-success"><i class="fa fa-file-o"></i> Base Product Content</a></td>
    <td><a href="/tabs/{{product.id}}" class="btn btn-primary"><i class="fa fa-folder-o"></i> Tabs</a></td>
  </tr> 
  {% endfor %}
    
  </tbody>
</table>
{% endif %}
