{% extends 'FgmsShopifyBundle::base.html.twig' %}
{% block javascripts %}	{% endblock %}
{% block body %}
	<div class="row homepage">
		<div class="col-sm-4">
			<a href="/shopify/products/">
				<div class="well" style="text-align: center;">
					<div><i class="fa fa-shopping-cart fa-4x"></i></div>
					<h2>Products</h2>
					<p>Add and manage your products on Shopify as well as any product page meta information (i.e. custom content and functionality).</p>
				</div>				
			</a>
		</div>
		<div class="col-sm-4">
			<a href="/shopify/lp/">
				<div class="well" style="text-align: center;">
					<div><i class="fa fa-file-text-o fa-4x"></i></div>
					<h2>Landing Pages</h2>
					<p>Build and manage landing pages for online marketing programs.</p>
				</div>
			</a>			
		</div>
		<div class="col-sm-4">
			<div class="well" style="text-align: center;">
				<div><i class="fa fa-money fa-4x"></i></div>
				<h2>Orders</h2>
				<p><a  href="/shopify/orders/email/csv/" class="btn btn-success">Download Order Emails</a></p>
			</div>
		</div>			
	</div>
